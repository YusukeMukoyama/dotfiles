[user]
name = YusukeMukoyama
email = yusuke.mukoyama@gmail.com

[color]
  status = auto
  diff = auto
  branch = auto
  interactive = auto
  grep = auto

[core]
	excludesfile = /Users/y.mukoyama/.gitignore_global

[alias]
  a = add
  b = branch
  s = status
  ba = branch -a
  co = checkout
  cm = commit
  logg = log --graph --all --decorate
  log1 = log --graph --remotes --tags --branches --date=short --decorate=short --pretty=format:'%Cgreen%h %Creset%cd %Cblue%cn %Cred%d %Creset%s'
  # ファイル名のみの差分を表示する
  difff = diff --name-only
  # staged diff
  diffs = diff --cached
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
